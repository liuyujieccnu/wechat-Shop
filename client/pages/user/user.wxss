/* pages/user/user.wxss */

.login-user-info {
  position: relative;
  margin: 40rpx 40rpx 0 40rpx;
  height: 200rpx;
  border-radius: 15rpx 15rpx 0 0;
  box-shadow: rgba(150, 150, 150, 0.664) 1rpx 0rpx 3rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.login-user-portrait {
  height: 100rpx;
  width: 100rpx;
  background-color: #f9e777;
  border-radius: 50%;
  margin-left: 50rpx;
  flex-shrink: 0;
}

.login-user-name {
  margin-left: 25rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #2a2a2a;
  flex: 1;
  margin-right: 50rpx;
}

.login-function {
  margin: 10rpx 40rpx 0 40rpx;
  border-radius: 0 0 15rpx 15rpx;
  box-shadow: rgba(150, 150, 150, 0.664) 1rpx 1rpx 3rpx;
  background-color: white;
}

.login-function .options {
  font-size: 32rpx;
  font-weight: 450;
  color: #4a4a4a;
  height: 120rpx;
  line-height: 120rpx;
  margin: 0 50rpx;
  border-bottom: 1rpx #7a7a7a3b solid;
  display: flex;
  align-items: center;
}

.login-function .options:last-child{
  border-bottom: none;
}

.login-function .options .options-text{
  flex: 1;
}

.arrow{
  width: 11rpx;
  height: 18rpx;
}