/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

page {
  background: #f9f9f9;
}

.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 144rpx;
  z-index: -1;
}

.unlogin-info{
  position: relative;
  margin: 70rpx 40rpx 0 40rpx;
  height: 200rpx;
  border-radius: 15rpx;
  box-shadow: rgba(150, 150, 150, 0.664) 3rpx 3rpx 9rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.unlogin-portrait{
  height: 100rpx;
  width: 100rpx;
  background-color: #f9e777;
  border-radius: 50%;
  margin-left: 50rpx;
}

.unlogin-tip{
  margin-left: 25rpx;
}

.unlogin-text1{
  font-size: 36rpx;
  font-weight: bold;
  color: #2a2a2a;
}

.unlogin-text2{
  font-size: 28rpx;
  color: #7a7a7a;
}

.unlogin-loginbtn{
  font-size: 32rpx;
  color: #2a2a2a;
  background-color: #f9e777;
  font-weight: bold;
  margin: 40rpx auto 0;
  height: 70rpx;
  line-height: 70rpx;
  width: 220rpx;
  border-radius: 8rpx;
  box-shadow: rgba(150, 150, 150, 0.664) 2rpx 2rpx 6rpx;
  text-align: center;
}
